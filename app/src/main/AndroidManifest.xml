<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymoviecatalog">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.mymoviecatalog.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMovieCatalog.NoActionBar">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ActorDetailsActivity">
        </activity>
        <activity android:name=".ui.FilmDetailsActivity">

        </activity>
        <activity android:name=".ui.WatchFilmActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"/>
    </application>

</manifest>